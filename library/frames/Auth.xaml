<Page x:Class="library.frames.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:library.frames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Auth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0">
            <TextBlock FontSize="32" TextAlignment="Center" Margin="0,0,0,0">
                Школьная библиотека
                <LineBreak/>
                Сергаческая СОШ №2
            </TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,250,40">
            <TextBlock TextAlignment="Right" Margin="10,5,0,0" FontSize="20" LineHeight="40">
                Логин :
                <LineBreak/>
                Пароль :
            </TextBlock>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="150">
            <TextBox x:Name="TxbLogin" Height="30" Margin="0,0,0,0"/>
            <TextBox x:Name="TxbPassword" Height="30" Margin="0,10,0,0"/>
            <Button x:Name="BtnLogin" Content="Войти" Height="30" Margin="0,10,0,0" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Page>
